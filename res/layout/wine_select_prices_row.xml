<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical" >
    
    <ImageView
        android:id="@+id/wineSelectPricesIV"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/yw_prices_buy"/>
	
    <TextView 
        android:id="@+id/wineSelectPricesRetailerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        style="@style/ywWineSelectListTextView"
        android:text="Retailer"/>
    
    <TextView 
        android:id="@+id/wineSelectPricesPriceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="0dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:minWidth="100dp"
        style="@style/ywWineSelectListTextView"
        android:text="$00.00/750ml"/>
        
        
</LinearLayout>