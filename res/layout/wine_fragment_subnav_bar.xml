<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="30dp"
   android:gravity="center_vertical"
   android:background="@drawable/fragment_header_bkg"
   android:stretchColumns="1" >
   <TableRow 
       android:layout_width="match_parent" >
       <TextView 
        android:id="@+id/wineSelectSubnavPrevTV"
        android:layout_height="match_parent"
      	android:layout_width="0dp"
      	android:layout_weight="1"
        android:textColor="@color/yw_white_bkg"
        
        android:text="&lt; Prev"/>
    <TextView 
        android:id="@+id/wineSelectSubnavCurrTV"
        android:layout_height="match_parent"
      	android:layout_width="0dp"
      	android:layout_weight="1"
      	android:gravity="center_horizontal"
        android:textColor="@color/yw_white"
        android:textStyle="bold"
        android:text="Current"/>
    <TextView 
        android:id="@+id/wineSelectSubnavNextTV"
        android:layout_height="match_parent"
      	android:layout_width="0dp"
      	android:layout_weight="1"
      	android:gravity="right"
        android:textColor="@color/yw_white_bkg"
        
        android:text="Next &gt;"/>
   </TableRow> 
</TableLayout>